<core:ObjectBlock
    x:Class="GSharp.Graphic.Objects.Customs.EnumBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:GSharp.Graphic.Blocks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    d:DesignHeight="100"
    d:DesignWidth="100"
    mc:Ignorable="d">

    <core:ObjectBlock.Resources>
        <ResourceDictionary Source="/GSharp.Graphic;component/ResourceDictionary.xaml" />
    </core:ObjectBlock.Resources>

    <Border
        Padding="3"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Background="#FFBB42C3"
        BorderBrush="#FF8B3191"
        BorderThickness="1"
        CornerRadius="2">
        <ComboBox
            x:Name="EnumName"
            Height="20"
            Background="#FF79297E"
            DisplayMemberPath="FriendlyName"
            Foreground="White"
            SelectionChanged="EnumName_SelectionChanged"
            Style="{StaticResource ComboBoxStyle}" />
    </Border>
</core:ObjectBlock>
